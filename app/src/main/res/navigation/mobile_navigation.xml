<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.wordsapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_first_to_second"
            app:destination="@id/navigation_category"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="false"
            app:launchSingleTop="true" />
    </fragment>

    <!-- Остальные фрагменты без изменений -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.wordsapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_third_to_fourth"
            app:destination="@id/navigation_learning"
            app:popUpTo="@id/navigation_dashboard"
            app:popUpToInclusive="false"
            app:launchSingleTop="true" />
    </fragment>



    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.wordsapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.wordsapp.ui.home.CategoryFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_learning"
        android:name="com.example.wordsapp.ui.learning.LearningFragment"
        android:label="@string/title_learning"
        tools:layout="@layout/fragment_category" />
</navigation>